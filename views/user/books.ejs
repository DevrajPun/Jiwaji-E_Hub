<%- include("header.ejs") %> <br /><br />

  <div class="container mt-5">
    <h2 class="mb-4">Keep exploring</h2>
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
      <strong>New Release:</strong> The Awesome - Recent Bill Underscore. Right at
      Your Fingertips!
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <h3 class="mt-5">Popular Authors</h3>
    <div class="row mb-4">
      <div class="col-6 col-sm-3 text-center">
        <img src="images/donald.jpg" class="rounded-circle mb-2" alt="Author 1" />
        <p class="author-name">Donald Knuth</p>
      </div>
      <div class="col-6 col-sm-3 text-center">
        <img src="images/andrew.webp" class="rounded-circle mb-2" alt="Author 2" />
        <p class="author-name">Andrew S. Tanenbaum</p>
      </div>
      <div class="col-6 col-sm-3 text-center">
        <img src="images/brian.webp" class="rounded-circle mb-2" alt="Author 3" />
        <p class="author-name">Brian Kernighan</p>
      </div>
      <div class="col-6 col-sm-3 text-center">
        <img src="images/rober.jpg" class="rounded-circle mb-2" alt="Author 4" />
        <p class="author-name">Robert Sedgewick</p>
      </div>

    </div>

    <h2 class="mt-5 mb-5">Available Books </h2>
    <div class="row mb-4">
      <% bookList.forEach(book=> { %>
        <div class="col-12 col-md-4 mb-3">
          <div class="card h-100">
            <img src="<%= book.coverImage %>" class="card-img-top" alt="Book 1" />
            <div class="card-body">
              <p class="card-title book-title">
                <a href="<%= book.bookUrl %>" target="_blank">
                  <%= book.title %>
                </a>
              </p>
              <p class="card-text">
                <%= book.author %>
              </p>
            </div>
          </div>
        </div>
        <% }) %>
    </div>

    <!-- Pagination -->
    <nav aria-label="Page navigation" class="pagination-container page">
      <ul class="pagination justify-content-center">
        <% if (currentPage> 1) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
          </li>
          <% } %>
            <% for (let i=1; i <=totalPages; i++) { %>
              <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>">
                  <%= i %>
                </a>
              </li>
              <% } %>
                <% if (currentPage < totalPages) { %>
                  <li class="page-item">
                    <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                  </li>
                  <% } %>
      </ul>
    </nav>
  </div>

  <%- include("footer.ejs") %>